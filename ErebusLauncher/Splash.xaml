<Window WindowStyle="None" x:Class="ErebusLauncher.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErebusLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Splash Window" Height="450" Width="450">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="224*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,4" StartPoint="-3,0">
                <GradientStop Color="Black" Offset="0.33"/>
                <GradientStop Color="#FF3700FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image x:Name="LogoImage" Source="pack://application:,,,/Image/VoidBLock-dark.png" HorizontalAlignment="Left" Height="302" Margin="69,73,0,0" VerticalAlignment="Top" Width="302" Grid.ColumnSpan="2">
            <Image.Effect>
                <DropShadowEffect Direction="300" BlurRadius="25" ShadowDepth="15"/>
            </Image.Effect>
        </Image>

    </Grid>
</Window>
