<hc:SplashWindow WindowStyle="None" x:Class="ErebusLauncher.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErebusLauncher"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Splash Window" Height="550" Width="450">
    <hc:SplashWindow.Background>
        <LinearGradientBrush EndPoint="2,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF1D0054" Offset="1"/>
        </LinearGradientBrush>
    </hc:SplashWindow.Background>
    <Label Content="{Binding Message, RelativeSource={RelativeSource AncestorType=hc:SplashWindow}}" Width="394" Height="61" Margin="0,0,0,48" VerticalAlignment="Bottom"/>
</hc:SplashWindow>
