<Window x:Class="ErebusLauncher.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErebusLauncher.Windows"
        mc:Ignorable="d"
        Title="Settings" Height="250" Width="500"
        ResizeMode="CanMinimize">
    <Grid Background="#FF060606">
        <StackPanel/>
        <Canvas>
            <ComboBox x:Name="ColorBox" Canvas.Left="106" Canvas.Top="25" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.975,0.484" SelectionChanged="ColorBox_SelectionChanged"/>
            <ComboBox x:Name="ThemeBox" Canvas.Left="106" Canvas.Top="98" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="ThemeBox_SelectionChanged"/>
            <Label Content="Theme" Canvas.Left="29" Canvas.Top="98" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="{x:Null}"/>
            <Label Content="Color" Canvas.Left="29" Canvas.Top="25" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="{x:Null}"/>
        </Canvas>
    </Grid>
</Window>
