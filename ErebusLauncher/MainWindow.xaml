<Window xmlns:hc="https://handyorg.github.io/handycontrol"  x:Class="ErebusLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErebusLauncher"
        mc:Ignorable="d"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Erebus Launcher" Height="630" Width="1200"
        WindowState="Maximized" ResizeMode="CanMinimize">
    <Grid x:Name="MainGrid">
        <Grid Margin="-67,-52,-73,-47">
            <Grid.Background>
                <ImageBrush ImageSource="/Wallpapers/Cabin.png" TileMode="None" Stretch="None"/>
            </Grid.Background>
            <Grid.Effect>
                <BlurEffect Radius="25"/>
            </Grid.Effect>
        </Grid>

        <hc:Card HorizontalAlignment="Right" Margin="0,499,36,38" Width="1128" Background="#7F0E0E0E" BorderBrush="{x:Null}" Foreground="White"/>
        <Button Content="Start Game" HorizontalAlignment="Right" Margin="0,0,57,58" VerticalAlignment="Bottom" RenderTransformOrigin="1.527,-4.999" Width="148" Height="36" Background="#FF4E00FF" BorderBrush="{x:Null}" FontSize="14" FontFamily="Arial"/>
    </Grid>
</Window>
